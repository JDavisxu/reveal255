generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ServerSeedSession {
  id             String   @id @default(uuid())
  userPubkey     String
  clientSeed     String?
  serverSeed     String
  serverSeedHash String
  revealed       Boolean  @default(false)
  createdAt      DateTime @default(now())
}
